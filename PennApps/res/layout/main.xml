<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
<ScrollView 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity = "center"
    >

	
<RelativeLayout 
	android:id="@+id/splash_wrapper"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:layout_centerHorizontal="true">
	<TextView 
		android:id="@+id/splash_text_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:text="mesht"
		android:textStyle="bold"
		android:textSize="60dp"
		android:typeface="serif"
		android:padding="40dp"
		/>
	    
	<RelativeLayout
		android:id="@+id/splash_et_wrapper"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/splash_text_title"
		android:layout_centerHorizontal="true">
		
		<LinearLayout
			android:id="@+id/splash_et_wrapper"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_centerHorizontal="true">
			<EditText
				android:id="@+id/splash_et_username"
				android:layout_width="200dp"
				android:layout_height="wrap_content"
				android:hint="Username"
				android:maxLines="1"
				android:gravity="center"
				/>
			<EditText
				android:id="@+id/splash_et_password"
				android:layout_below="@id/splash_et_username"
				android:layout_width="200dp"
				android:layout_height="wrap_content"
				android:hint="Password"
				android:maxLines="1"
				android:gravity="center"
				android:password="true"
				/>
		</LinearLayout>
		
		
		
		
	
	
<LinearLayout 
	android:id="@+id/splash_wrapper"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:layout_below="@id/splash_et_wrapper"
	android:layout_centerHorizontal="true"
    >
    <Button 
		android:id="@+id/splash_button_login"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_below="@id/splash_et_wrapper"
		android:text="Login" />
	<Button
	android:id="@+id/splash_button_register"
	android:layout_below="@id/splash_et_wrapper"
	android:text="Register"
	android:layout_height="wrap_content" 
	android:layout_width="wrap_content" 
	/>
	
	
</LinearLayout>
</RelativeLayout>
</RelativeLayout>
</ScrollView>

<include layout="@layout/splash_register"/>

</LinearLayout>

