<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  
  <LinearLayout
  android:id="@+id/friends_listwrapper"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  >
		  
		  <LinearLayout
		  android:orientation="horizontal"
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content"
		  >
				  <TextView 
				  android:id="@+id/friends_header1"
				  android:layout_width= "wrap_content"
				  android:layout_height="fill_parent"
				  android:layout_gravity="left"
				  android:layout_weight="1"
				  android:gravity="center_vertical"
				  android:text = "Friends Nearby"
				  android:textSize= "20dp"
				  />
				  <Button
				  android:id="@+id/friends_setheaderdistance"
				  android:layout_margin="0dp"
				  android:layout_width="wrap_content"
				  android:layout_height="35dp"
				  android:gravity="right"
				  android:text="1.0 mi."
				  />
		</LinearLayout>
		  
		  <TextView 
				  android:id="@+id/friends_header1_none"
				  android:layout_width= "wrap_content"
				  android:layout_height="wrap_content"
				  android:layout_gravity="left"
				  android:text = "No one is nearby."
				  android:textSize= "10dp"
				  android:visibility = "gone"
				  />
		  
		  <ListView
		  android:id="@+id/friends_listView_nearby"
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content"
		  />
		  
		  
		  <TextView 
		  android:id="@+id/friends_header2"
		  android:layout_width= "wrap_content"
		  android:layout_height="wrap_content"
		  android:paddingTop = "10dp"
		  android:text = "Other"
		  android:textSize= "20dp"
		  />
		  
		  
		  <TextView 
				  android:id="@+id/friends_header2_none"
				  android:layout_width= "wrap_content"
				  android:layout_height="wrap_content"
				  android:layout_gravity="left"
				  android:text = "Everyone is nearby!"
				  android:textSize= "10dp"
				  android:visibility = "gone"
				  />
		  
		  
		  <ListView
		  android:id="@+id/friends_listView_far"
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content"
		  />
		  
  </LinearLayout>
  
		  <Button
		  android:id="@+id/friends_button_add"
		  android:layout_width="fill_parent"
		  android:layout_height="wrap_content"
		  android:text="Add a Friend"
		  android:layout_alignParentBottom = "true"/>
		  
    <include layout = "@layout/friends_search"/>
    
</RelativeLayout>
