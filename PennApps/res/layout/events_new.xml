<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:id="@+id/events_new_wrapper"
  android:visibility="gone">

  <ScrollView
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
<LinearLayout
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical">
  
  <TextView
  android:id="@+id/events_whereheader"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content" 
  android:text="Where"
  />
  
  <EditText
  android:id="@+id/events_new_location"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content" 
  android:hint="Enter the location"
  android:maxLines="1"
  />
  
  <TextView
  android:id="@+id/events_whenheader"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content" 
  android:text="When"
  />
  
  <EditText
  android:id="@+id/events_new_time"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content" 
  android:hint="Enter the time."
  android:maxLines="1"
  />
  
  <TextView
  android:id="@+id/events_new_header1"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content" 
  android:text="Description"
  />
  
  <EditText
  android:id="@+id/events_new_description"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:hint="Enter the description here."
  />
  
  <TextView
  android:id="@+id/events_new_header1"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content" 
  android:text="Invite Others!"
  />
  
  <ScrollView
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
  <LinearLayout
  	android:id="@+id/events_new_scroller"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical"></LinearLayout>
  </ScrollView>
    
</LinearLayout>
  </ScrollView>

			<Button
	    	android:id="@+id/events_new_button"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_alignParentBottom="true"
	    	android:text="Plan it!"
	    	/>
</RelativeLayout>
