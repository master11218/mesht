<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
    
  		<TextView
  		android:id="@+id/events_single_location"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_alignParentTop="true"
    	android:text="Location of Event"
    	android:textSize="17dp"
    	/>
    	<TextView
  		android:id="@+id/events_single_creator"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_alignParentTop="true"
    	android:text="Creator"
    	/>
    	<TextView
  		android:id="@+id/events_single_time"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_alignParentTop="true"
    	android:text="Time"
    	/>
    	<TextView
  		android:id="@+id/events_single_description"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_alignParentTop="true"
    	android:text="Description"
    	/>
    	<TextView
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_alignParentTop="true"
    	android:text="Guests:"
    	android:textSize="9dp"
    	/>
    	
    	<HorizontalScrollView 
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	>
    	<LinearLayout
    	  android:id="@+id/events_single_guests"
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:layout_gravity="center" />
  		</HorizontalScrollView>
  		
  		<Button 
  		  android:id="@+id/events_invite_button"
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"
		  android:visibility="gone"
		  android:text="Invite Here!"/>
</LinearLayout>
