<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  <RelativeLayout
  android:id="@+id/event_wrapper"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
	    <TextView
	    	android:id="@+id/events_header1"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_alignParentTop="true"
	    	android:text="Planned Events"
	    	android:textSize="20dp"
	    	android:textStyle="bold"
	    	/>
	    	
	    <ListView
	      android:id="@+id/events_listview"
	      android:layout_below="@id/events_header1"
	      android:layout_width="fill_parent"
	      android:layout_height="fill_parent"
	      android:clickable="true"
	      android:focusable="false"
	      />
	      
	    <Button
	    	android:id="@+id/events_button"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_alignParentBottom="true"
	    	android:text="Plan an Event!"
	    	/>
    
	</RelativeLayout>
    <include layout="@layout/events_new" />
</RelativeLayout>
